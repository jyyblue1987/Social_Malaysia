<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/expandable_item_social_icon"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="22dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/expandable_item_social_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Friends"
            android:textColor="@color/main_color_grey_800"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/expandable_item_social_number_of_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="254 people"
            android:textColor="@color/main_color_grey_500"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/expandable_item_social_number_of_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="254 people"
            android:textColor="@color/main_color_grey_500"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/expandable_item_social_number_of_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="254 people"
            android:textColor="@color/main_color_grey_500"
            android:textSize="14dp"/>
    </LinearLayout>

</LinearLayout>